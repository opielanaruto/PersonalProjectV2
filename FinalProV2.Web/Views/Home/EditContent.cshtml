@model FinalProV2.DataModels.Content
<h2>Editing Content</h2>

<div class="col-md-10">
	<form method="post">
		Image: <input type="text" name="title" value="@Model.Image" style="width:100%" /><br />
		Title: <input type="text" name="title" value="@Model.Title" style="width:100%" /><br />
		Link:  <input type="text" name="title" value="@Model.Link" style="width:100%" /><br />
		<input type="hidden" name="Id" value="@Model.Id" /><br />
		<input type="submit" class="btn btn-sm btn-success" value="Save Changes" />
	</form>
</div>